<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext for local network connections to ROMulus server -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Local network -->
        <domain includeSubdomains="true">10.0.0.0/8</domain>
        <domain includeSubdomains="true">172.16.0.0/12</domain>
        <domain includeSubdomains="true">192.168.0.0/16</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        
        <!-- Common local hostnames -->
        <domain includeSubdomains="true">romulus.local</domain>
        <domain includeSubdomains="true">romulus.lan</domain>
        <domain includeSubdomains="true">romulus.home</domain>
    </domain-config>
    
    <!-- Default: require HTTPS for public internet -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>

{
  "name": "romulus-mobile",
  "version": "2.2.0",
  "description": "ROMulus Remote Play Client for Mobile & Handhelds",
  "main": "index.js",
  "scripts": {
    "start": "react-native start",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "web": "expo start --web",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:android:debug": "cd android && ./gradlew assembleDebug",
    "build:ios": "cd ios && xcodebuild -workspace ROMulus.xcworkspace -scheme ROMulus -configuration Release",
    "build:windows": "electron-builder --windows",
    "build:linux": "electron-builder --linux",
    "lint": "eslint .",
    "test": "jest",
    "clean": "react-native clean"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.73.0",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "react-native-screens": "^3.29.0",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-gesture-handler": "^2.14.0",
    "react-native-reanimated": "^3.6.1",
    "react-native-webrtc": "^118.0.7",
    "react-native-incall-manager": "^4.2.0",
    "react-native-gamepad": "^1.2.0",
    "react-native-game-controller": "^0.3.0",
    "react-native-haptic-feedback": "^2.2.0",
    "react-native-orientation-locker": "^1.6.0",
    "react-native-keep-awake": "^4.0.0",
    "react-native-fast-image": "^8.6.3",
    "react-native-svg": "^14.1.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-async-storage": "^1.21.0",
    "react-native-keychain": "^8.1.3",
    "react-native-netinfo": "^11.2.1",
    "react-native-device-info": "^10.12.0",
    "react-native-bluetooth-classic": "^1.73.0",
    "react-native-ble-plx": "^3.1.2",
    "axios": "^1.6.2",
    "socket.io-client": "^4.7.2",
    "zustand": "^4.4.7",
    "react-native-mmkv": "^2.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/runtime": "^7.23.6",
    "@react-native/babel-preset": "^0.73.18",
    "@react-native/eslint-config": "^0.73.1",
    "@react-native/metro-config": "^0.73.2",
    "@react-native/typescript-config": "^0.73.1",
    "@types/react": "^18.2.45",
    "@types/react-native": "^0.73.0",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "engines": {
    "node": ">=18"
  },
  "author": "ROMulus Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/XxishikuxX/ROMulus.git"
  }
